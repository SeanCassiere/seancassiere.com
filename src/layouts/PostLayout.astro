---
import type { CollectionEntry } from "astro:content";
import PageLayout from "./PageLayout.astro";
import PostHero from "@/components/blog/PostHero";

interface Props {
	post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
const {
	data: { title, description, ogImage, publishDate, draft },
	slug,
} = post;
const socialImage = ogImage ?? `/og-image/${slug}.png`;
const articleDate = publishDate.toISOString();
---

<script>
	document.addEventListener("astro:load", () => {
		const scrollBtn =
			(document.getElementById("to-top-btn") as HTMLButtonElement) || null;
		const targetHeader =
			(document.getElementById("blog-hero") as HTMLDivElement) || null;

		if (!scrollBtn || !targetHeader) return;

		function callback(entries: IntersectionObserverEntry[]) {
			entries.forEach((entry) => {
				// only show the scroll to top button when the heading is out of view
				scrollBtn.dataset.show = (!entry.isIntersecting).toString();
			});
		}

		scrollBtn.addEventListener("click", () => {
			document.documentElement.scrollTo({ top: 0, behavior: "smooth" });
		});

		const observer = new IntersectionObserver(callback);
		observer.observe(targetHeader);
	});
</script>

<PageLayout meta={{ title, description, articleDate, ogImage: socialImage }}>
	{
		draft && (
			<blockquote
				class="my-8 bg-neutral-300 py-4 pl-4 dark:bg-neutral-800"
				role="alert"
			>
				This post is a <strong>draft</strong>. If you're reading this, you're
				privy to the secret link. Please <strong>don't share</strong> it with
				anyone.
			</blockquote>
		)
	}
	<div class="mb-8">
		<a
			href="/blog"
			class="py-4 underline-offset-4 sm:py-0 sm:hover:underline"
			rel="prefetch"
		>
			‚Üê All posts
		</a>
	</div>
	<div class="gap-x-10 lg:flex lg:items-start">
		<article class="flex-1 break-words">
			<div id="blog-hero">
				<PostHero content={post} />
			</div>
			<div
				class="prose prose-cactus mt-12 prose-headings:font-semibold prose-headings:before:absolute prose-headings:before:-ms-5 prose-headings:before:text-accent prose-headings:before:content-['#'] hover:prose-headings:before:underline hover:prose-headings:before:underline-offset-4 prose-th:before:content-none sm:prose-headings:before:-ms-6"
			>
				<slot />
			</div>
		</article>
	</div>
	<button
		id="to-top-btn"
		class="z-90 fixed bottom-8 end-4 flex h-10 w-10 translate-y-28 items-center justify-center rounded-full border-2 border-transparent bg-zinc-200 text-3xl opacity-0 transition-all duration-300 hover:border-zinc-400 data-[show=true]:translate-y-0 data-[show=true]:opacity-100 dark:bg-zinc-700 sm:end-8 sm:h-12 sm:w-12"
		aria-label="Back to Top"
		data-show="false"
		><svg
			xmlns="http://www.w3.org/2000/svg"
			aria-hidden="true"
			focusable="false"
			fill="none"
			viewBox="0 0 24 24"
			stroke-width="2"
			stroke="currentColor"
			class="h-6 w-6"
		>
			<path
				stroke-linecap="round"
				stroke-linejoin="round"
				d="M4.5 15.75l7.5-7.5 7.5 7.5"></path>
		</svg>
	</button>
</PageLayout>
