---
import { SOCIAL_LINKS } from "@/data/constants";
import { siteConfig } from "@/site-config";

const year = new Date().getFullYear();
---

<footer
	class="mt-16 flex w-full flex-col items-center justify-center gap-y-2 border-t border-t-muted/50 pb-4 pt-4 text-center align-top text-foreground/75 sm:flex-row sm:justify-between sm:text-sm md:pb-8"
	aria-label="Footer"
>
	<div class="me-0 sm:me-4">
		Copyright &copy; {year}
		<span class="ml-2 mr-1" aria-label="rocket emoji">ðŸš€</span>
		{siteConfig.siteName}
	</div>
	<ul class="flex items-center gap-x-0.5" aria-label="Social links">
		<li aria-label="RSS">
			<a
				class="inline-block p-2 sm:hover:text-accent"
				href={SOCIAL_LINKS.rss}
				rel="noopener noreferrer"
			>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					class="h-4 w-4"
					viewBox="0 0 24 24"
					stroke-width="1.5"
					stroke="currentColor"
					fill="none"
					stroke-linecap="round"
					stroke-linejoin="round"
				>
					<path
						stroke="none"
						d="M0 0h24v24H0z"
						fill="none"
						stroke-linecap="round"
						stroke-linejoin="round"></path>
					<path
						d="M5 19m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"
						stroke-linecap="round"
						stroke-linejoin="round"></path>
					<path
						d="M4 4a16 16 0 0 1 16 16"
						stroke-linecap="round"
						stroke-linejoin="round"></path>
					<path
						d="M4 11a9 9 0 0 1 9 9"
						stroke-linecap="round"
						stroke-linejoin="round"></path>
				</svg>
				<span class="sr-only">RSS</span>
			</a>
		</li>
		<li aria-label="Sitemap">
			<a
				class="inline-block p-2 sm:hover:text-accent"
				href={SOCIAL_LINKS.sitemap}
				rel="noopener noreferrer"
			>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					class="h-4 w-4"
					width="44"
					height="44"
					viewBox="0 0 24 24"
					stroke-width="1.5"
					stroke="currentColor"
					fill="none"
					stroke-linecap="round"
					stroke-linejoin="round"
				>
					<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
					<path
						d="M3 15m0 2a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v2a2 2 0 0 1 -2 2h-2a2 2 0 0 1 -2 -2z"
						stroke-linecap="round"
						stroke-linejoin="round"></path>
					<path
						d="M15 15m0 2a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v2a2 2 0 0 1 -2 2h-2a2 2 0 0 1 -2 -2z"
						stroke-linecap="round"
						stroke-linejoin="round"></path>
					<path
						d="M9 3m0 2a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v2a2 2 0 0 1 -2 2h-2a2 2 0 0 1 -2 -2z"
						stroke-linecap="round"
						stroke-linejoin="round"></path>
					<path
						d="M6 15v-1a2 2 0 0 1 2 -2h8a2 2 0 0 1 2 2v1"
						stroke-linecap="round"
						stroke-linejoin="round"></path>
					<path d="M12 9l0 3"></path>
				</svg>
				<span class="sr-only">Sitemap</span>
			</a>
		</li>
		<li aria-label="Email">
			<a
				class="inline-block p-2 sm:hover:text-accent"
				href={`mailto:${SOCIAL_LINKS.email}`}
			>
				<svg
					class="h-4 w-4"
					aria-hidden="true"
					focusable="false"
					xmlns="http://www.w3.org/2000/svg"
					viewBox="0 0 24 24"
					stroke-width="1.5"
					stroke="currentColor"
					fill="none"
					stroke-linecap="round"
					stroke-linejoin="round"
				>
					<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
					<rect x="3" y="5" width="18" height="14" rx="2"></rect>
					<polyline points="3 7 12 13 21 7"></polyline>
				</svg>
				<span class="sr-only">Email</span>
			</a>
		</li>
		<li aria-label="GitHub">
			<a
				class="inline-block p-2 sm:hover:text-accent"
				href={SOCIAL_LINKS.github}
				target="_blank"
				rel="noopener noreferrer"
			>
				<svg
					class="h-4 w-4"
					aria-hidden="true"
					focusable="false"
					xmlns="http://www.w3.org/2000/svg"
					viewBox="0 0 24 24"
					stroke-width="1.5"
					stroke="currentColor"
					fill="none"
					stroke-linecap="round"
					stroke-linejoin="round"
				>
					<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
					<path
						d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
					>
					</path>
				</svg>
				<span class="sr-only">Github</span>
			</a>
		</li>
		<li aria-label="LinkedIn">
			<a
				class="inline-block p-2 sm:hover:text-accent"
				href={SOCIAL_LINKS.linkedin}
				target="_blank"
				rel="noopener noreferrer"
			>
				<svg
					class="h-4 w-4"
					aria-hidden="true"
					focusable="false"
					xmlns="http://www.w3.org/2000/svg"
					viewBox="0 0 24 24"
					stroke-width="1.5"
					stroke="currentColor"
					fill="none"
					stroke-linecap="round"
					stroke-linejoin="round"
				>
					<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
					<path
						d="M4 4m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z"
					></path>
					<path d="M8 11l0 5"></path>
					<path d="M8 8l0 .01"></path>
					<path d="M12 16l0 -5"></path>
					<path d="M16 16v-3a2 2 0 0 0 -4 0"></path>
				</svg>
				<span class="sr-only">LinkedIn</span>
			</a>
		</li>
		<li aria-label="X / Twitter">
			<a
				class="inline-block p-2 sm:hover:text-accent"
				href={SOCIAL_LINKS.twitter}
				target="_blank"
				rel="noopener noreferrer"
			>
				<svg
					class="h-4 w-4"
					aria-hidden="true"
					focusable="false"
					xmlns="http://www.w3.org/2000/svg"
					viewBox="0 0 24 24"
					stroke-width="1.5"
					stroke="currentColor"
					fill="none"
					stroke-linecap="round"
					stroke-linejoin="round"
				>
					<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
					<path d="M4 4l11.733 16h4.267l-11.733 -16z"></path>
					<path d="M4 20l6.768 -6.768m2.46 -2.46l6.772 -6.772"></path>
				</svg>
				<span class="sr-only">X / Twitter</span>
			</a>
		</li>
	</ul>
</footer>
